<div class="container">
    <% @articles.each do |article| %>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded">
                    <div class="card-header font-italic">
                        utworzone przez <%= article.user.username  if article.user %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to article.tytuł, article_path(article), class: "text-success" %></h5>
                        <p class="card-text"><%= truncate(article.opis, length: 100) %></p>
                        <%= link_to "Czytaj", article_path(article), class: "btn btn-outline-success" %>
                        <%= link_to "Edytuj", edit_article_path(article), class: "btn btn-outline-warning" %>
                        <%= link_to "Usuń", article_path(article), class: "btn btn-outline-danger",method: :delete, data: {confirm: "Jesteś pewien?"} %>
                    </div>
                    <div class="card-footer text-muted">
                        <small> Utworzone <%= time_ago_in_words(article.created_at) %>,
                        edytowane <%= time_ago_in_words(article.updated_at) %></small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
